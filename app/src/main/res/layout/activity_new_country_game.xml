<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCountryGameActivity">

    <Button
        android:id="@+id/guessTheCountryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Guess The Country"
        app:layout_constraintBottom_toTopOf="@+id/guessHintsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/guessHintsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="37dp"
        android:text="Guess-Hints"
        app:layout_constraintBottom_toTopOf="@+id/guessTheFlagBtn"
        app:layout_constraintStart_toStartOf="@+id/guessTheFlagBtn" />

    <Button
        android:id="@+id/guessTheFlagBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Guess The Flag"
        app:layout_constraintBottom_toTopOf="@+id/advancedLevelBtn"
        app:layout_constraintStart_toStartOf="@+id/advancedLevelBtn" />

    <Button
        android:id="@+id/advancedLevelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="206dp"
        android:text="Advanced Level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/newCountryBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="8dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>